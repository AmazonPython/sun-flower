/* pages/post-detail/post-detail.wxss */
.container {
    display: flex;
    flex-direction: column;
}

.head-image {
    width: 100%;
    height: 460rpx;
}

.author-date {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 20rpx 0 0 20rpx;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
}

.author {
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 20rpx;
}

.publish {
    font-size: 24rpx;
    margin-left: 20rpx;
}

.date {
    font-size: 24rpx;
    margin-left: 20rpx;
}

.title {
    margin: 30rpx 0 0 40rpx;
    font-size: 36rpx;
    font-weight: 700;
    letter-spacing: 2px;
}

.tool {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.circle-img {
    width: 90rpx;
    height: 90rpx;
}

.horizon {
    width: 660rpx;
    height: 1px;
    background-color: #e5e5e5;
    position: absolute;
}
