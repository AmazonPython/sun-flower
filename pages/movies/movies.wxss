/* pages/movies/movies.wxss */
.movie-list {
    margin-bottom: 28rpx;
}

.movie-search-bar {
    height: 90rpx !important;
}

.search-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 30rpx 30rpx 0 30rpx;
    justify-content: space-between;
}

/* 用伪元素修复 flex 布局的内容不够一整行时，元素之间隔太开的问题 */
.search-container::after {
    content: '';
    width: 200rpx;
}

page {
    background-color: #f2f2f2;
}
