<!--pages/posts/posts.wxml-->
<!-- flex 容器布局 -->
<view>
    <swiper indicator-dots="true" autoplay="true" interval="2500">
        <!-- swiper-item 插槽 -->
        <swiper-item><image src="{{ headImgSrc.one }}"></image></swiper-item>
        <swiper-item><image src="{{ headImgSrc.two }}"></image></swiper-item>
        <swiper-item><image src="{{ headImgSrc.three }}"></image></swiper-item>
    </swiper>

    <view class="post-container">
        <view class="post-author-date">
            <image class="post-author" src="{{ avatar }}"></image>
            <text class="post-date">{{ postDate }}</text>
        </view>

        <text class="post-title">箜篌引</text>
        <image class="post-image" src="{{ postImgSrc }}"></image>
        <text class="post-content">{{ content }}</text>

        <view class="post-like">
            <l-icon class="post-like-image" name="eye" size="32" />
            <text class="post-like-font">{{ view }}</text>
            <l-icon class="post-like-image" name="favor" size="30" />
            <text class="post-like-font">{{ collection }}</text>
        </view>
    </view>
</view>
