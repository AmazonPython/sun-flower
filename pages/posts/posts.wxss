/* pages/posts/posts.wxss */
swiper {
    width: 100%;
    height: 460rpx;
}

swiper image {
    width: 100%;
    height: 460rpx;
}

.post-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed; 
    padding-bottom: 10rpx;
}

.post-author-date {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
    width: 80rpx;
    height: 80rpx;
}

.post-date {
    margin-left: 20rpx;
    font-size: 28rpx;
}

.post-title {
    text-align: center;
    font-size: 36rpx;
    font-weight: 600;
    color: #4F2F4F;
    margin: 0 0 20rpx 20rpx;
}

.post-image {
    width: 100%;
    height: 400rpx;
    margin: 0 0 20rpx 0;
}

.post-content {
    font-size: 32rpx;
    line-height: 40rpx;
    letter-spacing: 2rpx;
    margin: 0 20rpx 20rpx 30rpx;
}

.post-like {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 20rpx;
}

.post-like-image {
    margin-right: 10rpx;
}

.post-like-font {
    font-size: 28rpx;
    margin-right: 40rpx;
}
