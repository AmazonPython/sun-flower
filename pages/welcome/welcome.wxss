/* pages/welcome/welcome.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #b3d4db;
}

.user-avatar {
    width: 200rpx;
    height: 200rpx;
    margin-top: 160rpx;
}

.motto {
    margin-top: 100rpx;
    size: 32rpx;
    font-weight: bold;
}

.journey-container {
    margin-top: 200rpx;
    border: 1px solid #405f80;
    width: 200rpx;
    height: 80rpx;
    border-radius: 5px;
    text-align: center;
}

.journey {
    font-size: 24rpx; 
    color: #405f80;
    line-height: 80rpx;
    font-weight: bold;
}

page {
    height: 100%;
    background-color: #b3d4db;
}
