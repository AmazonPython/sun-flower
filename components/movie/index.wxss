/* components/movie/index.wxss */
.container {
    display: flex;
    flex-direction: column;
    width: 240rpx;
}

.poster {
    width: 100%;
    height: 320rpx;
    margin-bottom: 20rpx;
}

.title {
    font-size: 28rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}

.rate-container {
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.score {
    margin-left: 10rpx;
    font-size: 28rpx;
}